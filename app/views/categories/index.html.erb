<h1>Categories:</h1>

<%= link_to 'New Category', new_category_path %>

  <table class="table table-dark">
    <thead>
    <tr>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
      <tr id="table">
        <td> <%= category.name %> </td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
    </tbody>

  </table>

