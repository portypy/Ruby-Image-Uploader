<h4> Users list:</h4>

<% @users.each do |user|  %>
<ul>
  <li>
    <%= user.email %>
    <%= link_to 'Show', user %>
    <% user.roles.each do |role| %>
      <%= role.name %>
  <% end %>
  </li>
</ul>
<% end %>

<%= link_to 'Back', posts_path, :class => 'btn btn-primary btn-xs mb-4'%>
<%= link_to 'Export CSV', 'users.csv', :format => :csv, :class => 'btn btn-primary btn-xs mb-4' %>
